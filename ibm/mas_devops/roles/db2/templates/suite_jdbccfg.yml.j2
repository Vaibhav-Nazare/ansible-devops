---
apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: "jdbc-{{ db2_instance_name | lower }}-credentials"
  namespace: "mas-{{mas_instance_id}}-core"
stringData:
  username: "{{db2_jdbc_username}}"
  password: "{{jdbc_instance_password}}"
---
apiVersion: config.mas.ibm.com/v1
kind: JdbcCfg
metadata:
  name: "{{mas_instance_id}}-jdbc-system"
  namespace: "mas-{{mas_instance_id}}-core"
  labels:
    mas.ibm.com/configScope: system
    mas.ibm.com/instanceId: "{{mas_instance_id}}"
spec:
  displayName: "{{ db2_instance_name | lower }} on CP4D"
  config:
    url: "{{ jdbc_url }}"
    sslEnabled: true
    credentials:
      secretName: "jdbc-{{ db2_instance_name | lower }}-credentials"
  certificates:
    - alias: "{{ db2_instance_name | lower }}"
      crt: |
        {{ db2_ca_pem | indent(8) }}
